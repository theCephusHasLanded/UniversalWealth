{
  "version": 2,
  "builds": [
    { "src": "server/api-server.js", "use": "@vercel/node" },
    { "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "dist" } }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "server/api-server.js" },
    { "src": "/(.*)", "dest": "/dist/$1" }
  ],
  "env": {
    "RECIPIENT_EMAIL": "Christinacephus@pursuit.org"
  }
}